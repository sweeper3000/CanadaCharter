<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fundamental_freedoms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.sweeper3000.canadacharter.FundamentalFreedomsActivity">

    <TextView
        android:id="@+id/fundamental_freedoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/fundamental_freedoms" />

    <TextView
        android:id="@+id/fundamental_freedoms_lower_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fundamental_freedoms"
        android:layout_marginBottom="2dp"
        android:textSize="12sp"
        android:text="@string/fundamental_freedoms_lower_case" />

    <TextView
        android:id="@+id/everyone_has_the_following_fundamental_freedoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fundamental_freedoms_lower_case"
        android:layout_marginBottom="2dp"
        android:text="@string/everyone_has_the_following_fundamental_freedoms" />

    <TextView
        android:id="@+id/freedom_of_conscience_and_religion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/everyone_has_the_following_fundamental_freedoms"
        android:layout_marginBottom="2dp"
        android:text="@string/freedom_of_conscience_and_religion" />

    <TextView
        android:id="@+id/freedom_of_peaceful_assembly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/freedom_of_conscience_and_religion"
        android:layout_marginBottom="2dp"
        android:text="@string/freedom_of_peaceful_assembly" />

    <TextView
        android:id="@+id/freedom_of_association"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/freedom_of_peaceful_assembly"
        android:layout_marginBottom="2dp"
        android:text="@string/freedom_of_association" />
</RelativeLayout>
