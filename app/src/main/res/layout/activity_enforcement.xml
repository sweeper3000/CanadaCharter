<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_enforcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="io.github.sweeper3000.canadacharter.EnforcementActivity">

        <TextView
            android:id="@+id/enforcement_of_guaranteed_rights_and_freedoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textSize="12sp"
            android:text="@string/enforcement_of_guaranteed_rights_and_freedoms" />

        <TextView
            android:id="@+id/any_infringement_can_be_challenged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enforcement_of_guaranteed_rights_and_freedoms"
            android:layout_marginBottom="2dp"
            android:text="@string/any_infringement_can_be_challenged" />

        <TextView
            android:id="@+id/exclusion_of_evidence_bringing_administration_of_justice_into_disrepute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/any_infringement_can_be_challenged"
            android:layout_marginBottom="2dp"
            android:textSize="12sp"
            android:text="@string/exclusion_of_evidence_bringing_administration_of_justice_into_disrepute" />

        <TextView
            android:id="@+id/evidence_that_was_obtained_in_violation_of_charter_is_not_admissible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exclusion_of_evidence_bringing_administration_of_justice_into_disrepute"
            android:layout_marginBottom="2dp"
            android:text="@string/evidence_that_was_obtained_in_violation_of_charter_is_not_admissible" />

    </RelativeLayout>
</ScrollView>